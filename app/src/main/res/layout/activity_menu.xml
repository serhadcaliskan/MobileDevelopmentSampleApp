<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/createQuestionMenuButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="132dp"
        android:layout_height="128dp"
        android:layout_marginTop="32dp"
        android:text="Create Question"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:strokeColor="@color/purple_700" />

    <Button
        android:id="@+id/showQuestionsMenuButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="132dp"
        android:layout_height="128dp"
        android:layout_marginTop="32dp"
        android:text="Show Questions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:strokeColor="@color/purple_700" />

    <Button
        android:id="@+id/createExamMenuButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="132dp"
        android:layout_height="128dp"
        android:layout_marginTop="32dp"
        android:text="Create Exam"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createQuestionMenuButton"
        app:strokeColor="@color/purple_700" />

    <Button
        android:id="@+id/examSettingsMenuButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="132dp"
        android:layout_height="128dp"
        android:layout_marginTop="32dp"
        android:text="Exam Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/showQuestionsMenuButton"
        app:strokeColor="@color/purple_700" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>